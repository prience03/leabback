<?xml version="1.0" encoding="utf-8"?>
<com.open.leanback.widget.NonOverlappingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/noclip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/metroitem_img"
        android:layout_width="186dp"
        android:layout_height="268dp"
        android:scaleType="fitXY"
        android:src="@mipmap/defualt_icon" />

    <TextView
        android:id="@+id/metroitem_name"
        android:text="电影111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="185dp"
        android:singleLine="true"/>

</com.open.leanback.widget.NonOverlappingLinearLayout>